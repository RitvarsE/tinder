{% extends 'templateLayout.twig' %}
{% block content %}

    <table class="mt-3 w-1/2 mx-auto">
        <thead>
        <tr>
            <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">
                Image
            </th>
            <th class="p-3 font-bold uppercase bg-gray-200 text-gray-600 border border-gray-300 hidden lg:table-cell">
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr class="bg-white lg:hover:bg-gray-100 flex lg:table-row flex-row lg:flex-row flex-wrap lg:flex-no-wrap mb-10 lg:mb-0">
                <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static">
                    <img src="{{ picture.path }}" alt=""/></td>
                {% if picture.id == user.profilePicture.id %}
                <td><img class="ml-6" width="120" src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/160/google/274/star_2b50.png"/></td>
                {% else %}
                <td class="w-full lg:w-auto p-3 text-gray-800 text-center border border-b block lg:table-cell relative lg:static">
                    <form action="/gallery/setmain/{{ picture.id }}" method="post">
                        <button class="border border-indigo-500 bg-indigo-500 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-indigo-600 focus:outline-none focus:shadow-outline" name="main" value="{{ picture.id }}">Set Main</button>
                    </form>

                    <form action="/gallery/delete/{{ picture.id }}" method="post">
                        <button class="border border-indigo-500 bg-indigo-500 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-indigo-600 focus:outline-none focus:shadow-outline" name="delete" value="{{ picture.id }}">Delete</button>
                    </form>
                    {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}