{% extends 'templateLayout.twig' %}
{% block content %}
    <div class="ml-48">
        <div class=" text-xl font-bold">{{ match.login }} {{ match.age }}</div><br>
        <img src="{{ match.profilePicture.path }}" class="mb-5"/>
        <div class="flex flex-row align-center"><form action="/like/{{ match.id }}" method="post">
            <button name="like" value="{{ match.id }}">
                <img src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/160/samsung/265/thumbs-up_1f44d.png"/>
            </button>
        </form>
        <form action="/dislike/{{ match.id }}" method="post">
            <button class="pl-72" name="dislike" value="{{ match.id }}">
                <img src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/160/samsung/265/thumbs-down_1f44e.png"/>
            </button>
        </form>
        </div>
    </div>
{% endblock %}