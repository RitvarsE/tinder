{% extends 'templateLayout.twig' %}
{% block content %}

    <form class="mt-10" method="post" enctype="multipart/form-data">
        <label class="text-indigo-500 text-xl" for="img">Select image to upload</label>
        <input type="file" id="img" name="image" accept="image/jpeg, image/png" required>
        <button class="border border-indigo-500 bg-indigo-500 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-indigo-600 focus:outline-none focus:shadow-outline" type="submit">Upload</button>
    </form>

{% endblock %}